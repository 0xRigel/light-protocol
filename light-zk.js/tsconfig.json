{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDirs": ["src", "generated"],
    "baseUrl": "src",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "entryPoints":[ 
      "src/account.ts",
      "src/constants.ts",
      "src/errors.ts",
      "src/relayer.ts",
      "src/utxo.ts",
      "src/wallet",
      "src/types",
      "src/merkleTree",
      "src/transaction",
      "src/cli-utils",
    ],
    "out": "docs",
    "readme": "../README.md"
  },
  "include": ["src", "__tests__", "tests"],
  "exclude": ["node_modules", "**/tests/*"],
  "dry": false,
  "debug": false
}
