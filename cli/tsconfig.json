{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDirs": ["src", "test"],
    "strict": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "./test/**/*"]
}
